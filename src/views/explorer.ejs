<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/viewEntity.css" />
    <title>GymBro 👊🏼 - by Alexandru Stelea</title>
  </head>

  <body>
    <div class="container">
      <div class="categories">
        <div class="categories-title">Categories</div>
        <div class="categories-list">
          <a href="#" class="category">All</a>
          <% categories.forEach(category => { %>
          <a href="#" class="category"><%= category.name %></a>
          <% }); %>
        </div>
        <a href="/admin/index" class="admin-button">Admin Dashboard</a>
      </div>
      <div class="main-content">
        <%- include("navbar/navbar") %>
        <header class="entity-title"><%= metadata.title %></header>
        <div class="cards-container">
          <% entities.forEach(entity => { %>
          <div class="card">
            <div class="card-content">
              <img
                src="/public/images/<%= metadata.image %>.png"
                alt="Image for exercises"
                width="110"
                height="110"
              />
              <h3><%= entity.title %></h3>
              <p><%= entity.attribute %></p>
              <a
                href="/<%= metadata.endpoint %>/<%= entity.id %>"
                class="card-button"
                ><%= metadata.button%></a
              >
            </div>
          </div>
          <% }); %>
        </div>
        <%- include("footer/footer") %>
      </div>
    </div>
  </body>
</html>
