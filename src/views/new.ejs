<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/index.css" />
    <title>GymBro 👊🏼 - by Alexandru Stelea</title>
  </head>

  <body>
    <%- include("navbar/navbar") %>
    <header class="entity-title">Latest additions</header>
    <div class="card-container">
      <% cardData.forEach(card => { %>
      <div class="card">
        <a href="/<%= card.entityType %>/<%= card.entityId %>" class="card">
          <div class="card-content">
            <img
              src="/public/images/<%= card.image %>.png"
              alt="Image for exercises"
              width="450"
              height="450"
            />
            <h3><%= card.title %></h3>
            <p><%= card.description %></p>
            <p class="item-count">Date added: <%= card.date_added %></p>
          </div>
        </a>
      </div>
      <% }); %>
    </div>
    <%- include("footer/footer") %>
  </body>
</html>
